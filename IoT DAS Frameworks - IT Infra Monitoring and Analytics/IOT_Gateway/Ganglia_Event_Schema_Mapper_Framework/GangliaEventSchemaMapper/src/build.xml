<?xml version="1.0" encoding="UTF-8"?>
<project name="GangliaEventSchemaMapper" default="deploy" basedir="..">
    <property name="src.dir" value="${basedir}/src"/>
    <property name="class.dir" value="${basedir}/build/classes"/>
    <property name="lib.dir" value="${basedir}/lib"/>
    <property name="del.dir" value="${basedir}/dist/GangliaEventSchemaMapper.jar"/>

    <target name="deploy" depends="clean,compile,create">
        <echo>GangliaEventSchemaMapper Project Starts Here...</echo>
    </target>
    
    <target name="clean">
        <echo>Cleaning the GangliaEventSchemaMapper project...</echo>
        <delete file="${del.dir}" />
    </target>
    
    <target name="compile">
        <echo>Compiling the GangliaEventSchemaMapper project...</echo>
        <mkdir dir="${class.dir}"></mkdir>
        <javac srcdir="${src.dir}" destdir="${class.dir}" includeantruntime="false">
            <classpath refid="build.class.path" />
        </javac>
        
    </target>
    
    <path id="build.class.path">
        <fileset dir="${lib.dir}">
            <include name="**/*.jar"/>
        </fileset>
    </path>
        
    <target name="create">
        <echo>Creating the GangliaEventSchemaMapper jar...</echo>
        <jar jarfile="${basedir}/dist/GangliaEventSchemaMapper.jar" basedir="${class.dir}">
        </jar>
    </target>
</project>
